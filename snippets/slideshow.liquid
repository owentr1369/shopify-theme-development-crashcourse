<div class="custom-slider">
    {% for block in section.blocks %}
    <div class="slide">
        <img src="{{ block.settings.image | image_url: 'large' }}" alt="{{ block.settings.image.alt }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}">
        <div class="slide-content">
            <h2>{{ block.settings.heading }}</h2>
            <p>{{ block.settings.subheading }}</p>
            <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>
        </div>
    </div>
    {% endfor %}
</div>

<style>
    .custom-slider {
        display: flex;
        overflow: hidden;
        scroll-snap-type: x mandatory;
    }

    .slide {
        min-width: 100%;
        scroll-snap-align: start;
    }
</style>